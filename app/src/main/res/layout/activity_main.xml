<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.example.calculator.MainActivity">
    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:textColor="#000000"
        android:lines="1"
        android:textSize="45sp" />
    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:textColor="#000000"
        android:lines="1"
        android:textSize="55sp" />
    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num7"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/num8"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/num9"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/op4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="/"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/num6"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/op3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="*"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
             android:background="@drawable/ripple_bg"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
             android:background="@drawable/ripple_bg"
            android:text="2"

            android:textSize="20sp" />

        <Button
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
             android:background="@drawable/ripple_bg"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/op2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
             android:background="@drawable/ripple_bg"
            android:text="-"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/chardot"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
             android:background="@drawable/ripple_bg"
            android:text="."
            android:textSize="20sp" />

        <Button
            android:id="@+id/num0"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
             android:background="@drawable/ripple_bg"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/charc"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
             android:background="@drawable/ripple_bg"
            android:text="c"
            android:textSize="20sp" />

        <Button
            android:id="@+id/op1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
             android:background="@drawable/ripple_bg"
            android:text="+"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/chardel"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
             android:background="@drawable/ripple_bg"
            android:text="Del"
            android:textSize="20sp" />

        <Button
            android:id="@+id/op0"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
             android:background="@drawable/ripple_bg"
            android:text="="
            android:textSize="20sp" />
    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>
